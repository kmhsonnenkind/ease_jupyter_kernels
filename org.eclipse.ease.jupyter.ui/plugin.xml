<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.debug.core.launchConfigurationTypes">
      <launchConfigurationType
            delegate="org.eclipse.ease.jupyter.ui.launching.JupyterLaunchDelegate"
            id="org.eclipse.ease.jupyter.launchConfigurationType"
            modes="run"
            name="Jupyter Notebook">
      </launchConfigurationType>
   </extension>
   <extension
         point="org.eclipse.core.contenttype.contentTypes">
      <content-type
            base-type="org.eclipse.core.runtime.text"
            default-charset="UTF-8"
            file-extensions="ipynb"
            id="org.eclipse.ease.jupyter.ui.notebook"
            name="Jupyter Notebook File"
            priority="normal">
      </content-type>
   </extension>
   <extension
         point="org.eclipse.ui.newWizards">
      <wizard
            class="org.eclipse.ease.jupyter.ui.wizards.IpynbWizard"
            id="org.eclipse.ease.jupyter.ui.ipynbwizard"
            name="Jupyter Notebook File"
            project="false">
      </wizard>
   </extension>
   <extension
         point="org.eclipse.debug.ui.launchShortcuts">
      <shortcut
            class="org.eclipse.ease.jupyter.ui.launching.JupyterLaunchDelegate"
            description="Launch Jupyter Notebook with EASE kernel"
            id="org.eclipse.ease.jupyter.launchShortcut"
            label="Jupyter Notebook"
            modes="run">
         <contextualLaunch>
            <enablement>
               <with
                     variable="selection">
                  <count
                        value="1">
                  </count>
                  <iterate
                        operator="and">
                     <adapt
                           type="org.eclipse.core.resources.IResource">
                     </adapt>
                     <test
                           forcePluginActivation="true"
                           property="org.eclipse.core.resources.name"
                           value="*.ipynb">
                     </test>
                  </iterate>
               </with></enablement>
         </contextualLaunch>
      </shortcut>
   </extension>

</plugin>
